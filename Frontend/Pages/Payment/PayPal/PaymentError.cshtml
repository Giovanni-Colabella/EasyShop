@page
@model Frontend.Pages.Payment.PayPal.PaymentErrorModel
@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "Pagamento Fallito";
}

<div class="min-h-screen flex items-center justify-center px-4">
    <div class="w-full max-w-md p-8 rounded-xl">
        <div class="text-center mb-6">
            <div class="mb-4 text-red-600">
                <i class="fas fa-times-circle text-5xl"></i>
            </div>
            <h2 class="text-3xl font-extrabold text-gray-900">Errore nel Pagamento</h2>
            <p class="mt-2 text-sm text-gray-600">Qualcosa è andato storto durante il pagamento.</p>
        </div>

        <div class="text-center">
            <p class="text-lg text-gray-700">Il pagamento non è stato completato.</p>
            <div class="mt-4">
                <a href="/" class="inline-block text-blue-600 hover:text-blue-500 text-sm font-medium transition">
                    Torna alla Home
                </a>
            </div>
        </div>
    </div>
</div>
