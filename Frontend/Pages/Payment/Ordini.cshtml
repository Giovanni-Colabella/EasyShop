@page
@model Frontend.Pages.Payment.OrdiniModel
@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "I tuoi ordini";
}

<div class="container mx-auto py-10 px-4">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-10">📦 I tuoi ordini</h2>

    @if (Model.Ordini != null && Model.Ordini.Any())
    {
        <div class="bg-white shadow-2xl rounded-2xl overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white">
                    <tr>
                        <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">ID Ordine</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">Data</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">Totale</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">Stato</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">Dettagli</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-100">
                    @foreach (var ordine in Model.Ordini)
                    {
                        <tr class="hover:bg-gray-50 transition duration-150 ease-in-out">
                            <td class="px-6 py-4 whitespace-nowrap text-gray-800">@ordine.IdOrdine</td>
                            <td class="px-6 py-4 whitespace-nowrap text-gray-600">@ordine.DataOrdine.ToString("dd/MM/yyyy")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-green-600 font-semibold">@ordine.TotaleOrdine.ToString("C", new System.Globalization.CultureInfo("it-IT"))</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-block px-3 py-1 rounded-full text-xs font-medium 
                                    @(ordine.Stato == "Completato" ? "bg-green-100 text-green-800" : 
                                      ordine.Stato == "In elaborazione" ? "bg-yellow-100 text-yellow-800" : 
                                      "bg-gray-100 text-gray-800")">
                                    @ordine.Stato
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <a href="@Url.Page("/Payment/OrdineDettaglio", new { ordineId = ordine.IdOrdine })"
                                   class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition duration-200">
                                    Visualizza
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center text-gray-500 text-lg mt-8">
            <p>🛒 Non hai ancora effettuato ordini.</p>
        </div>
    }
</div>
