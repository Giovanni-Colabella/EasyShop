@page
@model Frontend.Pages.Auth.RecuperoPasswordModel
@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "Recupero Password";
}

<div class="min-h-screen flex items-center justify-center px-4">
    <div class="w-full max-w-md bg-white p-8 rounded-2xl shadow-lg">
        <div class="text-center mb-8">
            <div class="flex justify-center mb-4">
                <div class="h-14 w-14 flex items-center justify-center rounded-full bg-green-100">
                    <i class="fas fa-unlock-alt text-green-500 text-xl"></i>
                </div>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Recupera la tua password</h2>
            <p class="mt-2 text-sm text-gray-600">
                Inserisci la tua email
            </p>
        </div>

        <form method="post" asp-page-handler="Submit" class="space-y-5">
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                    Indirizzo Email
                </label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input asp-for="Email" type="email" id="email" name="email" required
                        class="pl-10 pr-4 py-2 w-full rounded-md border border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 focus:outline-none text-sm text-gray-800"
                        placeholder="mariorossi@gmail.com" />
                </div>
            </div>

            <button type="submit"
                class="w-full flex justify-center items-center gap-2 py-2 px-4 text-sm font-semibold rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-400 transition">
                Invia link
            </button>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-md mt-4" role="alert">
                    <div class="flex items-center gap-2">
                        <i class="fas fa-info-circle"></i>
                        <span>@Model.Message</span>
                    </div>
                </div>
            }
        </form>

        <div class="mt-6 text-center text-sm">
            <a href="/auth/login"
                class="bg-blue-400 w-full p-2 rounded-lg text-center flex justify-center items-center text-white font-medium transition">
                Torna al Login
            </a>
        </div>

    </div>
</div>
