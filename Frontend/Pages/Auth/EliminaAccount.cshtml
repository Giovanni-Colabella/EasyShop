@page
@model Frontend.Pages.Auth.EliminaAccountModel
@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "⚠️ Elimina Account";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-red-100 via-white to-white px-4 py-12">
    <div class="bg-white border-2 border-red-500 shadow-2xl rounded-2xl p-8 max-w-md w-full animate-fade-in-down">
        <div class="text-center">
            <h1 class="text-3xl font-extrabold text-red-700 mb-2">⚠️ Attenzione!</h1>
            <p class="text-sm text-gray-600 mb-6">
                L'eliminazione dell'account è <strong>irreversibile</strong>.<br />
                Inserisci la tua password per confermare. Tutti i dati saranno persi per sempre.
            </p>
        </div>

        <form method="post" class="space-y-6">
            <div>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded-lg">
                        <p class="font-semibold">Errore:</p>
                        <p>@Model.ErrorMessage</p>
                    </div>
                }


                <label class="block text-sm font-semibold text-red-700">Password</label>
                <input asp-for="@Model.Password" type="password" placeholder="Inserisci password..."
                    class="mt-1 w-full px-4 py-2 border border-red-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 transition" />
                <span class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <p><a asp-page="/Auth/RecuperoPassword" class="text-sm text-blue-600">Hai dimenticato la password?</a></p>

            <button type="submit"
                class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg transition transform hover:scale-105 shadow-md">
                🗑️ Elimina definitivamente
            </button>
        </form>

        <p class="text-xs text-gray-500 text-center mt-6">Ultimo avviso. Dopo questa azione, non potrai più recuperare
            il tuo account.</p>
    </div>
</div>
