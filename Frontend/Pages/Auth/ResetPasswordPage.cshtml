@page
@model Frontend.Pages.Auth.ResetPasswordPageModel
@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "Resetta Password";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-teal-400 to-blue-500 p-4">
    <div class="w-full max-w-lg bg-white p-10 rounded-lg shadow-lg space-y-6">
        <div class="text-center">
            
            <h2 class="text-3xl font-extrabold text-gray-800">Reimposta la tua password</h2>
            <p class="mt-2 text-lg text-gray-600">
                Inserisci una nuova password.
            </p>
        </div>

        <form method="post" asp-page-handler="Submit" class="space-y-6">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Token" />

            <div class="relative">
                <label for="nuovaPassword" class="block text-lg font-semibold text-gray-800 mb-2">
                    Nuova Password
                </label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 pl-4 flex items-center text-gray-400">
                        <i class="fas fa-key"></i>
                    </span>
                    <input asp-for="NuovaPassword" id="nuovaPassword" name="nuovaPassword" type="password" required
                           class="pl-12 pr-4 py-3 w-full rounded-xl border-2 border-gray-300 shadow-md focus:ring-teal-500 focus:border-teal-500 focus:outline-none"
                           placeholder="Inserisci la nuova password" />
                </div>
            </div>

            <button type="submit"
                    class="w-full flex justify-center items-center gap-3 py-3 px-6 rounded-xl text-white font-semibold bg-teal-600 hover:bg-teal-700 focus:outline-none focus:ring-4 focus:ring-teal-300 transition duration-300">
                <i class="fas fa-save text-xl"></i>
                Reimposta Password
            </button>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="bg-teal-50 border border-teal-200 text-teal-700 px-4 py-3 rounded-lg mt-4" role="alert">
                    <div class="flex items-center gap-2">
                        <i class="fas fa-info-circle"></i>
                        <span>@Model.Message</span>
                    </div>
                </div>
            }
        </form>

        <div class="mt-6 text-center text-sm">
            <a href="/auth/login" class="text-teal-600 hover:text-teal-500 font-medium transition duration-300">
                Login
            </a>
        </div>
    </div>
</div>
