@page
@model Frontend.Pages.EmailVerificationSentModel
@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "Verifica Email";
}

<!-- Impostiamo overflow-hidden sul body o sull'elemento root -->
<div class="flex justify-center items-center min-h-screen">
    <div class="bg-white p-10 rounded-lg shadow-lg max-w-lg w-full text-center">
        <div class="mb-6">
            <i class="fas fa-envelope text-6xl text-green-500"></i>
        </div>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Verifica la tua email</h2>
        <p class="text-lg text-gray-600 mb-4">
            Abbiamo inviato un'email con il link di conferma. Controlla la tua casella di posta e clicca sul link per attivare il tuo account.
        </p>
        <p class="text-sm text-gray-500 mb-6">
            Se non trovi l'email, controlla nella cartella dello spam o riprova a inviarla.
        </p>
        <a href="/" class="inline-block px-6 py-3 bg-green-500 text-white rounded-lg text-lg hover:bg-green-600 transition duration-200">
            Torna alla home
        </a>
    </div>
</div>
